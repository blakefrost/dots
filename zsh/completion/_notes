#compdef notes

_notes() {
    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments \
        '1: :->cmd'\
        '*: :->topic'

    case $state in
    cmd)
        _arguments '1:Command:(new ls last topics)'
    ;;
    *)
        _files -W $NOTES_ROOT
    esac
}

_notes "$@"
