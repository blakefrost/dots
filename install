#! /usr/bin/env sh

ROOT=$(cd $(dirname $0); pwd -P)

cp -R $ROOT/zsh         $HOME/.zsh
cp -R $ROOT/oh-my-zsh   $HOME/.oh-my-zsh
cp -R $ROOT/vim         $HOME/.vim

for filename in\
  $ROOT/gemrc\
  $ROOT/gitconfig\
  $ROOT/gitignore\
  $ROOT/gvimrc.after\
  $ROOT/irbrc\
  $ROOT/pryrc\
  $ROOT/railsrc\
  $ROOT/screenrc\
  $ROOT/vimrc\
  $ROOT/gvimrc\
  $ROOT/zshrc\
  $ROOT/dir_colors
do
  if [ -f $filename ]; then
    echo "linking $filename"
    cp $filename ~/.$(basename $filename)
  fi
done
