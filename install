#! /usr/bin/env sh

ROOT=$(cd $(dirname $0); pwd -P)

ln -s $ROOT/zsh         $HOME/.zsh
ln -s $ROOT/oh-my-zsh   $HOME/.oh-my-zsh

for filename in\
  $ROOT/gemrc\
  $ROOT/gitconfig\
  $ROOT/gitignore\
  $ROOT/gvimrc.after\
  $ROOT/irbrc\
  $ROOT/pryrc\
  $ROOT/railsrc\
  $ROOT/screenrc\
  $ROOT/vimrc.after\
  $ROOT/vimrc.before\
  $ROOT/zshrc
do
  if [ -f $filename ]; then
    echo "linking $filename"
    ln -f $filename ~/.$(basename $filename)
  fi
done
